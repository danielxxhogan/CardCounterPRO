<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Card Counter PRO</title>
</head>
<body>
    <div class="first">
        <div class="second">
            <!-- header -->
            <i class="card-symbols">♠</i>
            <i class="card-symbols">♣</i>
            <i class="card-symbols">♥</i>
            <i class="card-symbols">♦</i>
            <h1><b>Card Counter PRO</b></h1>
            <i class="card-symbols">♠</i>
            <i class="card-symbols">♣</i>
            <i class="card-symbols">♥</i>
            <i class="card-symbols">♦</i>
        </div>
        <section class="flex">

            <!-- 1/3 -->
            <div class="first-flex">
                <div class="balance">
                    <h2>Balance:</h2>
                    <h2><%= values.balance %></h2>
                </div>
                <h2>Suggestion</h2>
                <h2 id="suggestion"><%= values.suggestion %></h2>

                <div class="count">
                    <h2>Count</h2>
                    <h2><%= values.count %></h2>
                </div>
                <!-- bet chevrons -->
                <h2>Bet</h2>
                <form <%= values.upChevronEnabled %>>
                    <div><button class="btn" <%= values.betDisabled %>><h2>Up Chevron</h2></button></div>
                </form>
                <h2> <%= values.playerBet %> </h2>
                <form <%= values.downChevronEnabled %>>
                    <div><button class="btn" <%= values.betDisabled %>><h2>Down Chevron</h2></button></div>
                    </form>
            </div>

            <!-- 2/3 -->
            <div class="second-flex">
                <div class="game">
                    <div class="game-top">
                        <form action='/playAgain' method='post'>
                            <button id="playAgain" class="btn game-btn" <%= values.playAgainDisabled %>>Play Again</button>
                        </form>
                        <form action='/deal' method='post'>
                            <button id="deal" class="btn game-btn" <%= values.dealDisabled %>>Deal</button>
                        </form>
                        <div><h1><%= values.instructions %></h1></div>
                    </div>

                    <!-- dealer cards -->
                    <div class="flex">
                        <% for (let i=0; i<values.dca.length; i++) { %>
                            <div <%= values.hideCards %>><img src="images/cards/<%= values.dca[i] %>.jpg" alt="" height="150px"></div>
                        <% } %>
                    </div>
    
                    <div class="pot">
                        <h2>Pot</h2>
                        <h2><%= values.pot %></h2>
                    </div>
                    <!-- player cards -->
                    <div class="flex">
                        <% for (let i=0; i<values.cards.length; i++) { %>
                            <div <%= values.hideCards %>><img src="images/cards/<%= values.cards[i] %>.jpg" alt="" height="150px"></div>
                        <% } %>
                    </div>
                </div>

                <!-- game buttons -->
                <div class="buttons">
                    <form action='/hit' method='post'>
                        <button class="btn game-btn" <%= values.hitDisabled %>><h2>Hit</h2></button>
                    </form>
                    <form action='/stay' method='post'>
                        <button class="btn game-btn" <%= values.stayDisabled %>><h2>Stay</h2></button>
                    </form>
                    <form action='/split' method='post'>
                        <button class="btn game-btn" <%= values.splitDisabled %>><h2>Split</h2></button>
                    </form>
                    <form action='/dobleDown' method='post'>
                        <button class="btn game-btn" <%= values.doubleDownDisabled %>><h2>Double Down</h2></button>
                    </form>
                    <!-- bet buttons -->
                    <form action='/bet1000' method='post'>
                        <button class="btn game-btn" <%= values.betDisabled %>><h2>Bet $1,000</h2></button>
                    </form>
                    <form action='/bet5000' method='post'>
                        <button class="btn game-btn" <%= values.betDisabled %>><h2>Bet $5,000</h2></button>
                    </form>
                    <form action='/bet50000' method='post'>
                        <button class="btn game-btn" <%= values.betDisabled %>><h2>Bet $50,000</h2></button>
                    </form>
                    <form action='/bet1000000' method='post'>
                        <button class="btn game-btn" <%= values.betDisabled %>><h2>Bet $1,000,000</h2></button>
                    </form>
                </div>
            </div>

            <div class="rules">
                <h2>Rules:</h2>
                <ol>
                    <li>When the count is up, bet high.</li>
                    <li>When the count is down, bet low.</li>
                    <li>Always follow basic strategy (chart below).</li>
                </ol>
            </div>
        </section>

            <!-- this is the fourth quarter -->
            <div class="basic-strategy">
                <img src="images/Blackjack-Chart-Strategy.jpg" alt="" height="1100px">
            </div>
    </div>

    <!-- <script src='index.js' type="module"></script> -->
    
</body>
</html>